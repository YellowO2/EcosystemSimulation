/* In your .uss file */

.hotbar-slot {
    width: 50px;
    height: 50px;
    background-color: rgb(50, 50, 50);
    border-width: 2px;
    border-color: rgb(120, 120, 120);
    margin: 3px;
    border-radius: 4px;
    
    /* Center the icon */
    -unity-background-image-tint-color: white;
    -unity-background-scale-mode: scale-to-fit;
}

.hotbar-slot--selected {
    border-color: yellow;
    border-width: 3px;
}